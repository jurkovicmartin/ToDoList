
<MainWindow>:

    #map
    tabs: tabs

    GridLayout:
        cols: 1
        
        BoxLayout:
            orientation: "horizontal"
            size_hint: [1, .1]
            Image:
                source: "img/logo.png"
                size_hint: [.85, 1]
                fit_mode: "contain"
                canvas.before:
                    Color:
                        rgba: [.349, .451, .639, 1]
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Button:
                text: ""
                size_hint: [.15, 1]
                background_normal: "img/edit_button.png"
                background_down: "img/edit_button.png"
                border: (10,10,10,10)
                on_press: root.tabs_popup()
        
